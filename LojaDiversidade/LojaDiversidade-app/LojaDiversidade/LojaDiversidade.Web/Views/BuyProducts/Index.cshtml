@model IEnumerable<LojaDiversidade.Web.Models.ProductViewModel>
<link rel="stylesheet" href="/css/product.css" asp-append-version="true" />

<form>
    <div class="container row">
        <h2> Bem vindo! Loja de Diversidades</h2>
         algumas ofertas da loja:
    @foreach (var product in Model)
        {
        <div class="col-md-3 mb-2">
                <a href="/BuyProducts/ProductDetails/@product.Id">
          <div class="card">
          <img class="img-thumbnail" src="/images/@product.ImageURL">
          <div class="card-body">
        <h5 class="card-title mb-2">
        @product.Name
        </h5>
        <p class="cart-text text-black">
        <b>@product.Price.ToString("C")</b>
        </p>
        </div>
        </div>
      </a>
  </div>
}


    </div>
</form>